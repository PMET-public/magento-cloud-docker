  "version": "0.2.0",
  "configurations": [
    {
      // php -d xdebug.remote_autostart=1 ./bin/ece-docker build:compose --host="host.com" --port="80"
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "stopOnEntry": true,
      "pathMappings": {
          "${env:HOME}/Downloads/ref/vendor/magento/magento-cloud-docker": "${workspaceRoot}"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}